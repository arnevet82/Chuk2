<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="app.mydb.com.a3dapplication.Categories.ChoiceActivity">




    <ImageView
        android:layout_marginTop="140dp"
        android:layout_width="136dp"
        android:layout_height="192dp"
        android:background="@drawable/star_3"
        android:scaleType="center"
        android:visibility="visible"
        android:id="@+id/imageView3" />
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginStart="245dp"
        android:layout_width="136dp"
        android:layout_height="192dp"
        android:background="@drawable/oval_4"
        android:scaleType="center"
        android:visibility="visible" />
    <ImageView
        android:layout_marginTop="360dp"
        android:layout_marginStart="150dp"
        android:layout_width="236dp"
        android:layout_height="212dp"
        android:background="@drawable/triangle"
        android:scaleType="center"
        android:visibility="visible" />

    <View
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorText"
        android:id="@+id/view_toolbar" />


    <TextView
        android:id="@+id/text"
        android:textColor="@color/colorText"
        android:textSize="19dp"
        android:lineSpacingExtra="1dp"
        android:gravity="center"
        android:text="What would you like to\ncreate today?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:textAlignment="viewStart"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/personal_style"
        android:layout_marginTop="210dp"
        android:background="@drawable/personal_style_blink"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <Button
        android:textAlignment="viewStart"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/home_style"
        android:layout_below="@+id/personal_style"
        android:background="@drawable/home_style_blink"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <Button
        android:textAlignment="viewStart"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/gadgets"
        android:layout_below="@+id/home_style"
        android:background="@drawable/gadgets_blink"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <include layout="@layout/toolbar_layout"></include>

</RelativeLayout>
