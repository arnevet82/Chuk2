<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/text_container_namenecklace"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <EditText
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowColor="#263238"
            android:shadowRadius="10"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:lineSpacingExtra="10sp"
            android:id="@+id/edttxt"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:gravity="bottom|center_horizontal">
        </EditText>

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowColor="#263238"
            android:shadowRadius="10"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:lineSpacingExtra="5sp"
            android:id="@+id/txt"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_above="@+id/letter_count">
        </TextView>


        <TextView
            android:layout_marginTop="5dp"
            android:layout_alignEnd="@+id/edttxt"
            android:layout_below="@+id/edttxt"
            android:letterSpacing="0.01"
            android:textColor="#7a77fd"
            android:textSize="11sp"
            android:id="@+id/letter_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/saveroom"
            android:letterSpacing="0.05"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Done!"
            android:background="@drawable/cancel_done_text_button"
            android:id="@+id/done_text"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/saveroom"
            android:background="@color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_height="50dp" />


        <Button
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/saveroom"
            android:letterSpacing="0.05"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="cancel"
            android:background="@drawable/cancel_done_text_button"
            android:id="@+id/cancel_text"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>







</FrameLayout>


