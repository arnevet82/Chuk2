<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlueBackground">
    <include layout="@layout/toolbar_layout" />
    <include layout="@layout/before_payment_layout"/>



    <RelativeLayout
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/design_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="170dp">


        <ImageView
            android:layout_marginTop="85dp"
            android:id="@+id/frame_shape"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="250dp"/>
        <ImageView
            android:layout_marginTop="85dp"
            android:id="@+id/color_frame_shape"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="250dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/screen_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="170dp">
    </RelativeLayout>

    <Button
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="#3f029e"
        android:background="@drawable/v_button"
        android:id="@+id/v"
        android:layout_width="40dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/current_number"
        android:textStyle="bold"
        android:textColor="#3f029e"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginRight="33dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toolbar"
        android:layout_width="50dp"
        android:layout_height="50dp" />


    <include layout="@layout/resize_layout"/>

    <Button
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/buttons_nav_bar"
        android:id="@+id/delete"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Delete"
        android:background="@drawable/delete_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <Button
        android:background="#3f029e"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/undo"
        android:text="undo"
        android:textSize="10dp"
        android:textAllCaps="false"
        android:layout_width="40dp"
        android:layout_height="30dp" />
    <!--<Button-->
        <!--android:background="#3f029e"-->
        <!--android:textColor="@color/white"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginBottom="80dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:id="@+id/print"-->
        <!--android:text="print"-->
        <!--android:textSize="10dp"-->
        <!--android:textAllCaps="false"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="30dp" />-->

    <Button
        android:layout_marginLeft="10dp"
        android:background="#3f029e"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="grid"
        android:id="@+id/grid"
        android:textAllCaps="false"
        android:layout_width="40dp"
        android:layout_height="30dp" />


    <ImageView
        android:layout_marginBottom="140dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/ruler"
        android:background="@drawable/sargel_stripes"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <include layout="@layout/punch_layout"/>
    <include layout="@layout/topping_updated_layout"/>
    <include layout="@layout/color_layout"/>
    <include layout="@layout/text_layout"/>


    <View
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorText"
        android:id="@+id/view_toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>


<LinearLayout
    android:id="@+id/buttons_nav_bar"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_alignParentBottom="true"
        android:drawableTop="@drawable/punch"
        android:background="#3f029e"
        android:text="Punch"
        android:textSize="10dp"
        android:textColor="@color/lightBlueBackground"
        android:textAllCaps="false"
        android:id="@+id/punch"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        />

    <Button
        android:layout_alignParentBottom="true"
        android:drawableTop="@drawable/liron_topping_icon_1"
        android:background="#3f029e"
        android:textSize="12dp"
        android:text="Topping"
        android:textColor="@color/lightBlueBackground"
        android:textAllCaps="false"
        android:id="@+id/topping"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        />


    <Button
        android:layout_alignParentBottom="true"
        android:drawableTop="@drawable/color"
        android:background="#3f029e"
        android:textSize="10dp"
        android:text="Color"
        android:textColor="@color/lightBlueBackground"
        android:textAllCaps="false"
        android:id="@+id/color"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        />


    <Button
        android:layout_alignParentBottom="true"
        android:drawableTop="@drawable/text"
        android:background="#3f029e"
        android:textSize="10dp"
        android:text="Text"
        android:textColor="@color/lightBlueBackground"
        android:textAllCaps="false"
        android:id="@+id/text"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        />


</LinearLayout>

</RelativeLayout>
