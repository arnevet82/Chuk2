<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/punch_edit_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/buttons"
    android:gravity="center"
    android:layout_above="@+id/ruler"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <Button
        android:layout_margin="7dp"
        android:id="@+id/rotate_button"
        android:background="@drawable/rotate"
        android:layout_width="63dp"
        android:layout_height="70dp" />


    <Button
        android:layout_margin="7dp"
        android:id="@+id/scale_button"
        android:background="@drawable/scale"
        android:layout_width="63dp"
        android:layout_height="70dp" />

    <Button
        android:layout_margin="7dp"
        android:id="@+id/left_right_button"
        android:background="@drawable/left_right"
        android:layout_width="63dp"
        android:layout_height="70dp" />


    <Button
        android:layout_margin="7dp"
        android:id="@+id/up_down_button"
        android:background="@drawable/up_down"
        android:layout_width="63dp"
        android:layout_height="70dp" />



</LinearLayout>


    <Button
        android:layout_centerHorizontal="true"
        android:layout_above="@id/buttons"
        android:id="@+id/delete"
        android:background="@drawable/delete_button"
        android:layout_width="70dp"
        android:layout_height="27dp" />


    <Button
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ruler"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:background="@drawable/sargel_stripes"/>

    <ImageView
        android:layout_marginBottom="110dp"
        android:id="@+id/point"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_point"
        android:layout_width="10dp"
        android:layout_height="10dp" />


</RelativeLayout>