<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/before_payment"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/share_toolbar_layout"/>


    <ImageView
        android:layout_marginTop="140dp"
        android:layout_width="136dp"
        android:layout_height="192dp"
        android:background="@drawable/star_3"
        android:scaleType="center"
        android:visibility="visible"
        android:id="@+id/imageView3" />
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginStart="245dp"
        android:layout_width="136dp"
        android:layout_height="192dp"
        android:background="@drawable/oval_4"
        android:scaleType="center"
        android:visibility="visible" />
    <ImageView
        android:layout_marginTop="360dp"
        android:layout_marginStart="150dp"
        android:layout_width="236dp"
        android:layout_height="212dp"
        android:background="@drawable/triangle"
        android:scaleType="center"
        android:visibility="visible" />


    <TextView
        android:id="@+id/talent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:typeface="sans"
        android:textStyle="italic|bold"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#3f029e"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="4.7sp"
        android:text="You are done! What a talent!"
        />


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#3f029e"
        android:lineSpacingExtra="4.8sp"
        android:text="Price: __________$"
        />

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@drawable/printer"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:typeface="sans"
        android:textStyle="italic|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#3f029e"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="4.7sp"
        android:text="Printing in processâ€¦"
        />

    <Button
        android:textSize="16sp"
        android:id="@+id/continue_for_payment"
        android:letterSpacing="0.05"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/continue_for_payment_button"
        android:text="Continue for payment"
        android:layout_width="210dp"
        android:layout_height="wrap_content" />


</RelativeLayout>